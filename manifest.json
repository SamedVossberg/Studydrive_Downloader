{
    "manifest_version": 3,
    "name": "Studydrive Skipper",
    "version": "1.0.0",
    "author": "Sam Vossberg",
    "description": "Download all Studydrive files.",
    "permissions": ["activeTab", "scripting", "webRequest"],
    "host_permissions": ["*://*.studydrive.net/"],
    "icons": {
        "48": "icon_48.png"
    },
    "action": {
      "default_icon": "icon_48.png"
    },
    "background": {
        "service_worker": "content.js"
    },
    "content_scripts": [
      {
        "js": ["script.js"],
        "matches": ["https://www.studydrive.net/*/doc/*"]
      }
    ]
  }